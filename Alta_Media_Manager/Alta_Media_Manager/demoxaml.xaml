<UserControl x:Class="Alta_Media_Manager.demoxaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="390">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="293*"/>
            <ColumnDefinition Width="48*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Grid.Column="0" Source="Asset/Alta_Avatar/av_playlist_small.png"/>
        <Button Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="{x:Null}" Height="32">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Asset/Alta_Btn/ic_action_new.png"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
